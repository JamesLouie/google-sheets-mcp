# Google Sheets MCP Server Configuration
# Copy this file to .env and fill in your values

# Method 1: Service Account Authentication (Recommended for production)
# Path to your Google Cloud Service Account JSON key file
SERVICE_ACCOUNT_PATH="/path/to/your/service-account-key.json"

# Method 2: Base64 Encoded Credentials (Good for containers)
# Base64 encoded content of your credentials JSON file
# Use: base64 -w 0 /path/to/credentials.json
CREDENTIALS_CONFIG=""

# Method 3: Application Default Credentials
# Google's standard environment variable for ADC
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# Method 4: OAuth 2.0 Authentication (Interactive use)
# Path to OAuth 2.0 client credentials JSON file
CREDENTIALS_PATH="/path/to/credentials.json"
# Path where OAuth tokens will be stored (must be writable)
TOKEN_PATH="/path/to/token.json"

# Optional: Default Google Drive folder ID
# If set, operations will be scoped to this folder by default
DRIVE_FOLDER_ID=""

# Optional: Logging level
LOG_LEVEL="info"  # debug, info, warn, error 